@model List<Portfolio>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Portfolyo</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Projelerim</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Yaptığım Projeler
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Ana Başlık</th>
									<th scope="col">Alt Başlık</th>
									<th scope="col">Resim</th>
									<th scope="col">Proje Github Url</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
						
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										<td>@item.Title</td>
										<td>@item.SubTitle</td>
										<td>@item.ImageUrl</td>
										<td>@item.Url</td>
										<td>@item.Description</td>
										<td><a href="/Portfolio/DeletePortfolio/@item.PortfolioId" class="btn btn-danger">Sil</a></td>
										<td><a href="/Portfolio/UpdatePortfolio/@item.PortfolioId" class="btn btn-warning">Güncelle</a></td>
										
									</tr>
								}
							</tbody>
							<td><a href="/Portfolio/CreatePortfolio/" class="btn btn-primary">Yeni Proje Ekle</a></td>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
