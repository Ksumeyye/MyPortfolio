@model List<MyPortfolio.DAL.Entities.Message>

@{
    ViewData["Title"] = "Mesaj Gönder";
}
<div class="contact wow fadeInUp" data-wow-delay="0.1s" id="message">
    <div class="container-fluid">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-4"></div>
                <div class="col-md-8">
                    <div class="contact-form">
                        <div id="success"></div>
                        <form asp-controller="Message" asp-action="SendMessage" method="post">
                            <div class="form-group">
                                <label for="Name">Adınız</label>
                                <input type="text" name="NameSurname" id="NameSurname" class="form-control" placeholder="Adınız" required />
                            </div>
                            <div class="form-group">
                                <label for="Email">E-posta Adresiniz</label>
                                <input type="email" name="Email" id="Email" class="form-control" placeholder="E-posta adresiniz" required />
                            </div>
                            <div class="form-group">
                                <label for="SendDate">Mesaj Gönderme Tarihi</label>
                                <input type="time" name="SendDate" id="SendDate" class="form-control" placeholder="Mesaj gönderme tarihiniz" required />
                            </div>
                            <div class="form-group">
                                <label for="Subject">Konu</label>
                                <input type="text" name="Subject" id="Subject" class="form-control" placeholder="Konu" required />
                            </div>
                            <div class="form-group">
                                <label for="MessageDetail">Mesajınız</label>
                                <textarea name="MessageDetail" id="MessageDetail" class="form-control" placeholder="Mesajınızı yazın" rows="5" style="width:60%; height:auto;" required></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">Gönder</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    <!-- contact-warning -->
    <div class="message-warning">

        Bir şeyler ters gitti. Lütfen tekrar deneyin.
    </div>

    <!-- contact-success -->
    <div class="message-success">

        Mesajınız gönderildi, teşekkür ederiz!<br>
    </div>

</div>