@model List<SocialMedia>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Layout/Index.cshtml";
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Sosyal Medya Hesaplarım</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Sosyal Medyalar</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Hesaplarım
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Hesap Adı</th>
									<th scope="col">Hesap Adresi</th>
									<th scope="col">İkon</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>

								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										<td>@item.Title</td>
										<td>@item.Url</td>
										<td>@item.Icon</td>
										<td><a href="/SocialMedia/DeleteSocialMedia/@item.SocialMediaId" class="btn btn-danger">Sil</a></td>
										<td><a href="/SocialMedia/UpdateSocialMedia/@item.SocialMediaId" class="btn btn-warning">Güncelle</a></td>

									</tr>
								}
							</tbody>
							<td><a href="/SocialMedia/CreateSocialMedia/" class="btn btn-primary">Yeni Sosyal Medya Ekle</a></td>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


