@model ToDoList
@{
    ViewData["Title"] = "CreateToDoList";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Yapılacaklar</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Yeni Yapılacak İşlem Ekleme Sayfası</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Yapılacaklar ile ilgili ekleme işlemini aşağıdaki panelden yapabilirsiniz.
                        </div>
                        <form method="post">
                            <label>Yapılacaklar İçeriği</label>
                            <input type="text" asp-for="Title" class="form-control" /> <!--asp-for="Title" ile modelin içindeki propertylere erişim sağlanır.form-control ile uzunca metin kutusunun gelemsini sağlar.-->
                            <br />
                            <label>Görsel Yolu</label>
                            <input type="text" asp-for="ImageUrl" class="form-control" /> <!--asp-for="ImageUrl" ile modelin içindeki propertylere erişim sağlanır.form-control ile uzunca metin kutusunun gelemsini sağlar.-->
                            <br />
                            <label>Tarih Aralığı</label>
                            <input type="text" asp-for="Date" class="form-control" /> <!--asp-for="Date" ile modelin içindeki propertylere erişim sağlanır.form-control ile uzunca metin kutusunun gelemsini sağlar.-->
                            <br />
                           @*  <label>Durum</label>
                            <input type="checkbox" asp-for="Status"/> *@ <!--asp-for="Status" ile modelin içindeki propertylere erişim sağlanır.form-control ile uzunca metin kutusunun gelemsini sağlar.-->
                            <br />
                            <button class="btn btn-primary">Yapılacak İşi Ekle</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


